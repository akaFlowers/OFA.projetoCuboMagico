                @Html.LabelFor(model => model.Numero, htmlAttributes: new { @class = "label" })@Html.EditorFor(model => model.Numero, null, new { htmlAttributes = new { @class = "input input3", id = "txtNumCartao", style = "border:0;" } })<br />
                @Html.LabelFor(model => model.NomeImpresso, htmlAttributes: new { @class = "label" })@Html.EditorFor(model => model.NomeImpresso, null, new { htmlAttributes = new { @class = "input input3", id = "txtPropCartao", style = "border:0;" } })<br />
                @Html.LabelFor(model => model.NomeImpresso, htmlAttributes: new { @class = "label" })
            </form>
        </div>
        <div id="livro_right">
            <form class="folha_right">
                <img id="imgLivro4" src="~/Content/_imagens/imglivro4.png" />
                <h3 id="recFinal">
                    Você está completando seu cadastro de 3 etapas!
                    Avance e confirme seus dados <span class="e">:)</span>
                </h3>
                <input type="submit" class="btnForm" value="Avançar ->" style="border:0;" />
            </form>
        </div>
        <div id="livro_centro">

        </div>
    </div>
</body>


</html>
}

