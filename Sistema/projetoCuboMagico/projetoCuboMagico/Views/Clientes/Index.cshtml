@model IEnumerable<projetoCuboMagico.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="page-header">
    <h2>@ViewData["Title"]</h2>
</div>
<div style="padding-bottom: 15px;" class="text-right">
    @Html.ActionLink("Cadastrar", "Create", null, new { @class = "btn btn-success" })
</div>
<div class="table-responsive">
    @if (Model.Any())
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(c => c.Usuario.Id)</th>
                    <th>@Html.DisplayNameFor(c => c.Usuario.Usuarioo)</th>
                    <th>@Html.DisplayNameFor(c => c.Usuario.Senha)</th>
                    <th>@Html.DisplayNameFor(c => c.Usuario.NivelAcesso)</th>
                    <th>@Html.DisplayNameFor(c => c.Id)</th>
                    <th>@Html.DisplayNameFor(c => c.Nome)</th>
                    <th>@Html.DisplayNameFor(c => c.Sobrenome)</th>
                    <th>@Html.DisplayNameFor(c => c.DataNascimento)</th>
                    <th>@Html.DisplayNameFor(c => c.Sexo)</th>
                    <th>@Html.DisplayNameFor(c => c.TamCamiseta)</th>
                    <th>@Html.DisplayNameFor(c => c.Cpf)</th>
                    <th>@Html.DisplayNameFor(c => c.Email)</th>
                    <th>@Html.DisplayNameFor(c => c.Telefone)</th>
                    <th>@Html.DisplayNameFor(c => c.Celular)</th>
                    <th>@Html.DisplayNameFor(c => c.Estado)</th>
                    <th>@Html.DisplayNameFor(c => c.Cidade)</th>
                    <th>@Html.DisplayNameFor(c => c.Bairro)</th>
                    <th>@Html.DisplayNameFor(c => c.Rua)</th>
                    <th>@Html.DisplayNameFor(c => c.Numero)</th>
                    <th>@Html.DisplayNameFor(c => c.Complemento)</th>
                    <th>@Html.DisplayNameFor(c => c.Pais)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(c => cliente.Usuario.Id)</td>
                    <td>@Html.DisplayFor(c => cliente.Usuario.Usuarioo)</td>
                    <td>@Html.DisplayFor(c => cliente.Usuario.Senha)</td>
                    <td>@Html.DisplayFor(c => cliente.Usuario.NivelAcesso)</td>
                    <td>@Html.DisplayFor(c => cliente.Id)</td>
                    <td>@Html.DisplayFor(c => cliente.Nome)</td>
                    <td>@Html.DisplayFor(c => cliente.Sobrenome)</td>
                    <td>@Html.DisplayFor(C => cliente.DataNascimento)</td>
                    <td>@Html.DisplayFor(C => cliente.Sexo)</td>
                    <td>@Html.DisplayFor(C => cliente.TamCamiseta)</td>
                    <td>@Html.DisplayFor(C => cliente.Cpf)</td>
                    <td>@Html.DisplayFor(C => cliente.Email)</td>
                    <td>@Html.DisplayFor(C => cliente.Telefone)</td>
                    <td>@Html.DisplayFor(C => cliente.Celular)</td>
                    <td>@Html.DisplayFor(C => cliente.Estado)</td>
                    <td>@Html.DisplayFor(C => cliente.Cidade)</td>
                    <td>@Html.DisplayFor(C => cliente.Bairro)</td>
                    <td>@Html.DisplayFor(C => cliente.Rua)</td>
                    <td>@Html.DisplayFor(C => cliente.Numero)</td>
                    <td>@Html.DisplayFor(C => cliente.Complemento)</td>
                    <td>@Html.DisplayFor(C => cliente.Pais)</td>

                    <td>
                        @Html.ActionLink("Detalhes", "Details", new { id = cliente.Id }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Editar", "Edit", new { id = cliente.Id }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Deletar", "Delete", new { id = cliente.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-danger">
            <p>Não há clientes cadastrados.</p>
        </div>
    }
</div>