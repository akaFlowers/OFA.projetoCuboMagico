@model IEnumerable<projetoCuboMagico.Models.Livro>

@{
    ViewData["Title"] = "Livros";
}

<div class="page-header">
    <h2>@ViewData["Title"]</h2>
</div>
<div style="padding-bottom: 15px;" class="text-right">
    @Html.ActionLink("Cadastrar", "Create", null, new { @class = "btn btn-success" })
</div>
<div class="table-responsive">
    @if (Model.Any())
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(l => l.Id)</th>
                    <th>@Html.DisplayNameFor(l => l.Nome)</th>
                    <th>@Html.DisplayNameFor(l => l.Autor)</th>
                    <th>@Html.DisplayNameFor(l => l.IdGeneroLivro)</th>
                    <th>@Html.DisplayNameFor(l => l.DataPublicacao)</th>
                    <th>@Html.DisplayNameFor(l => l.Editora)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var livro in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(l => livro.Id)</td>
                    <td>@Html.DisplayFor(l => livro.Nome)</td>
                    <td>@Html.DisplayFor(l => livro.Autor)</td>
                    <td>@Html.DisplayFor(l => livro.IdGeneroLivro)</td>
                    <td>@Html.DisplayFor(l => livro.DataPublicacao)</td>
                    <td>@Html.DisplayFor(l => livro.Editora)</td>
                    <td>
                        @Html.ActionLink("Detalhes", "Details", new { id = livro.Id }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Editar", "Edit", new { id = livro.Id }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Deletar", "Delete", new { id = livro.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-danger">
            <p>Não há funcionários cadastrados.</p>
        </div>
    }
</div>